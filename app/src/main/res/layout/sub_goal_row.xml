<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/chevron_Ne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:layout_alignTop="@+id/subGoal_textview"
                android:src="@drawable/ic_chevron_right_black_24dp" />

            <CheckBox
                android:id="@+id/task_item_done"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"


                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"

                android:layout_toEndOf="@id/chevron_Ne"
                android:layout_toRightOf="@id/chevron_Ne"
                android:focusable="false" />

            <TextView
                android:id="@+id/subGoal_textview"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/task_item_done"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@id/task_item_done"
                android:layout_toRightOf="@id/task_item_done"

                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />


            <!--
    <TextView android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/done_count"
        android:layout_toRightOf="@id/done_count"

        android:layout_below="@id/arrow_expand_imageview"


        android:text="/"/>

    <TextView
        android:id="@+id/childSubGoal_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@id/slash"
        android:layout_toRightOf="@id/slash"

        android:layout_below="@id/arrow_expand_imageview"
        android:layout_marginRight="16dp"
        tools:text="8"
        />
-->
            <TextView
                android:id="@+id/done_count"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"
                android:layout_below="@id/subGoal_textview"

                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@id/goalDueDate"
                android:layout_toRightOf="@id/goalDueDate"
                android:textSize="9dp"
                tools:text="5 / 8"


                />

            <TextView
                android:id="@+id/goalDueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_alignLeft="@id/subGoal_textview"
                android:layout_below="@id/subGoal_textview"

                android:text="Wed, Jan 31"
                android:textSize="9dp">

            </TextView>


            <ImageButton
                android:id="@+id/overFlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/task_item_done"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:src="@drawable/ic_action_navigation_more_vert" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>







