<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />

            <gradient
                android:angle="270"
                android:centerColor="#F5EDF7"
                android:centerY="0.75"
                android:endColor="#F5EDF7"
                android:startColor="#F5EDF7" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />

                <gradient
                    android:angle="270"
                    android:endColor="#643579"
                    android:startColor="#643579" />
            </shape>
        </clip>
    </item>

</layer-list>